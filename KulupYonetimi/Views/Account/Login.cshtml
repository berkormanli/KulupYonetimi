@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h1 class="my-4 text-center">@ViewData["Title"]</h1>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Email adresi</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" name="sifre" class="form-control" id="floatingPassword" placeholder="Şifre">
                <label for="floatingPassword">Şifre</label>
            </div>
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="rememberMe" value="true" /> Beni Hatırla
                </label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Giriş Yap</button>
            <hr class="my-4">
            <small class="text-muted">Hesabın yok mu? <a asp-action="Register">Hemen kaydol.</a></small>
        </form>
    </div>
</div>
