@model KulupYonetimi.Models.ViewModels.HomeIndexViewModel
@using System.Linq

@{ 
    ViewData["Title"] = "Ana Sayfa";
}

@if (Model.IsYonetici)
{
    var yoneticiModel = Model.YoneticiDashboard;
    <div class="container">
        @if(yoneticiModel.YonetilenKulup != null)
        {
            <div class="d-flex justify-content-between align-items-center my-4">
                <h1>@yoneticiModel.YonetilenKulup.Ad - Yönetim Paneli</h1>
                <div>
                    <a asp-controller="Duyuru" asp-action="Create" class="btn btn-info">Yeni Duyuru Yayınla</a>
                    <a asp-controller="Etkinlik" asp-action="Create" class="btn btn-primary">Yeni Etkinlik Oluştur</a>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h4>Son Duyurular</h4>
                    @if (!yoneticiModel.Duyurular.Any())
                    {
                        <p>Henüz bir duyuru yayınlanmamış.</p>
                    }
                    else
                    {
                        <ul class="list-group">
                            @foreach (var duyuru in yoneticiModel.Duyurular)
                            {
                                <li class="list-group-item"><strong>@duyuru.Baslik</strong><br/>@duyuru.Icerik</li>
                            }
                        </ul>
                    }
                </div>
                <div class="col-md-6">
                    <h4>Yaklaşan Etkinlikler</h4>
                    @if (!yoneticiModel.Etkinlikler.Any())
                    {
                        <p>Henüz bir etkinlik oluşturulmamış.</p>
                    }
                    else
                    {
                        <ul class="list-group">
                            @foreach (var etkinlik in yoneticiModel.Etkinlikler)
                            {
                                <li class="list-group-item"><a asp-controller="Etkinlik" asp-action="Details" asp-route-id="@etkinlik.Id">@etkinlik.Ad</a> - @etkinlik.Tarih.ToString("dd.MM.yyyy")</li>
                            }
                        </ul>
                    }
                </div>
            </div>
        }
        else
        {
             <div class="alert alert-warning" role="alert">
                Henüz bir kulüp yönetmiyorsunuz.
            </div>
        }

        @if (yoneticiModel.YonetilenKulup != null)
        {
            <div class="mt-5">
                <h3>Geçmiş Etkinlikler</h3>
                @if (!yoneticiModel.GecmisEtkinlikAnalizleri.Any())
                {
                    <div class="alert alert-info" role="alert">
                        Tamamlanmış etkinlik bulunamadı. Yeni etkinlikler düzenledikçe burada katılım ve değerlendirme özetlerini göreceksiniz.
                    </div>
                }
                else
                {
                    var toplamKatilimci = yoneticiModel.GecmisEtkinlikAnalizleri.Sum(a => a.KatilimciSayisi);
                    var toplamDegerlendirme = yoneticiModel.GecmisEtkinlikAnalizleri.Sum(a => a.DegerlendirmeSayisi);
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5 class="card-title">Toplam Katılımcı</h5>
                                    <p class="display-6">@toplamKatilimci</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5 class="card-title">Toplam Değerlendirme</h5>
                                    <p class="display-6">@toplamDegerlendirme</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5 class="card-title">Etkinlik Sayısı</h5>
                                    <p class="display-6">@yoneticiModel.GecmisEtkinlikAnalizleri.Count</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Etkinlik</th>
                                    <th>Tarih</th>
                                    <th class="text-center">Katılımcı</th>
                                    <th class="text-center">Ortalama Puan</th>
                                    <th class="text-center">Değerlendirme</th>
                                    <th class="text-center">Yorum</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var analiz in yoneticiModel.GecmisEtkinlikAnalizleri)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Etkinlik" asp-action="Details" asp-route-id="@analiz.EtkinlikId">
                                            @analiz.Ad
                                        </a>
                                    </td>
                                    <td>@analiz.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td class="text-center">@analiz.KatilimciSayisi</td>
                                    <td class="text-center">
                                        @if (analiz.OrtalamaPuan.HasValue)
                                        {
                                            @analiz.OrtalamaPuan.Value.ToString("0.00")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">@analiz.DegerlendirmeSayisi</td>
                                    <td class="text-center">@analiz.YorumSayisi</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        }
    </div>
}
else
{
    var ogrenciModel = Model.OgrenciDashboard;
    <div class="container">
        <h1 class="my-4">Etkinlik Akışı</h1>

        @if (!ogrenciModel.Etkinlikler.Any())
        {
            <div class="alert alert-info" role="alert">
                Henüz üye olduğunuz bir kulübün etkinliği bulunmamaktadır. <a asp-controller="Kulup" asp-action="Index">Kulüpleri keşfedin!</a>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var item in ogrenciModel.Etkinlikler)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@item.Ad</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@item.Kulup.Ad</h6>
                                <p class="card-text"><strong>Tarih:</strong> @item.Tarih.ToString("dd MMMM yyyy HH:mm")</p>
                                <p class="card-text"><strong>Konum:</strong> @item.Konum</p>
                            </div>
                            <div class="card-footer">
                                <a asp-controller="Etkinlik" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Detayları Gör</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
}
