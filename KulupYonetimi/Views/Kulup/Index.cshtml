@model IEnumerable<KulupYonetimi.Models.Entities.Kulup>

@{ 
    ViewData["Title"] = "Kulüpler";
}

<div class="container">
    <h1 class="my-4">@ViewData["Title"]</h1>
@* 
    @if (User.IsInRole("KulupYoneticisi"))
    {
        <p>
            <a asp-action="Create" class="btn btn-primary">Yeni Kulüp Oluştur</a>
        </p>
    } *@

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@item.Ad</h5>
                        <p class="card-text">@item.Aciklama</p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detayları Gör</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
